{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "target": "es6",
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "strictNullChecks": false,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
